{
    "dataRoles": [{
            "name": "Category",
            "kind": "Grouping",
            "displayName": "Category Data"
        },
        {
            "name": "Measure",
            "kind": "Measure",
            "displayName": "Measure Data"
        },
        {
            "name": "CategoryImageUrl",
            "kind": "Grouping",
            "displayName": "Category Image URL"
        }
    ],
    "dataViewMappings": [{
        "conditions": [{
            "Category": {
                "min": 1,
                "max": 1
            },
            "Measure": {
                "min": 0,
                "max": 1
            },
            "CategoryImageUrl": {
                "min": 0,
                "max": 1
            }
        }],
        "categorical": {
            "categories": {
                "for": {
                    "in": "Category"
                }
            },
            "values": {
                "group": {
                    "by": "CategoryImageUrl",
                    "select": [{
                        "bind": {
                            "to": "Measure"
                        }
                    }]
                }
            }
        }
    }],
    "objects": {
        "enableAxis": {
            "displayName": "Enable Axis",
            "properties": {
                "show": {
                    "displayName": "Enable Axis",
                    "type": { "bool": true }
                }
            }
        },
        "enableImages": {
            "displayName": "Enable Images",
            "properties": {
                "show": {
                    "displayName": "Enable Images",
                    "type": { "bool": true }
                }
            }
        },
        "colorSelector": {
            "displayName": "Data Colors",
            "properties": {
                "fill": {
                    "displayName": "Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        },
        "generalView": {
            "displayName": "General View",
            "properties": {
                "opacity": {
                    "displayName": "Bars Opacity",
                    "type": {
                        "integer": true
                    }
                }
            }
        }
    }
}